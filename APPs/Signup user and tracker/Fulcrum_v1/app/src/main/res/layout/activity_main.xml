<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/groupStylewhite_A700"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarToolbar"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_19pxv"
        android:layout_width="match_parent"
        app:contentInsetStart="0dp">
        <LinearLayout android:id="@+id/linearAppBar"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_36pxh"
            android:layout_marginStart="@dimen/_29pxh"
            android:layout_width="match_parent" android:orientation="horizontal">
            <ImageView android:id="@+id/imageBack"
                android:layout_height="@dimen/_60pxh"
                android:layout_width="@dimen/_72pxh"
                android:scaleType="fitXY" android:src="@drawable/img_back_1"/>
            <TextView android:alpha="0.8" android:ellipsize="end"
                android:id="@+id/txtLogout"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_16pxv"
                android:textAlignment="textEnd"
                android:layout_weight="0.45"
                android:layout_width="0dp" android:singleLine="true"
                android:text="@string/lbl_log_out"
                style="@style/txtPoppinssemibold18" tools:text="@string/lbl_log_out"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:id="@+id/textview_name"/>

        <androidx.appcompat.widget.AppCompatButton
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/button_first"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_32pxh"
            android:layout_marginStart="@dimen/_32pxh"
            android:layout_marginTop="@dimen/_33pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_19pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_20pxv"
            android:singleLine="true"
            android:text="Button A"
            style="@style/btnSolidRounded"
            android:textAllCaps="false"/>
        <androidx.appcompat.widget.AppCompatButton
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/button_second"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_32pxh"
            android:layout_marginStart="@dimen/_32pxh"
            android:layout_marginTop="@dimen/_33pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_19pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_20pxv"
            android:singleLine="true"
            android:text="Button B"
            style="@style/btnSolidRounded"
            android:textAllCaps="false"/>
    </LinearLayout>
</RelativeLayout>